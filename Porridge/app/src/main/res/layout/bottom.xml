<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#000000"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/id_tab01"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#E0E0E0"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_tab01_img"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/tab01_pressed" />

        <TextView
            android:id="@+id/bottom_tv1"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="发现" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab02"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#E0E0E0"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_tab02_img"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/tab02_normal" />

        <TextView
            android:id="@+id/bottom_tv2"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="关注" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab03"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#E0E0E0"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_tab03_img"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:clickable="false"
            android:scaleType="fitCenter"
            android:src="@drawable/tab03_normal" />

        <TextView
            android:id="@+id/bottom_tv3"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="发表" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab04"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#E0E0E0"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_tab04_img"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:clickable="false"
            android:scaleType="fitCenter"
            android:src="@drawable/tab04_normal" />

        <TextView
            android:id="@+id/bottom_tv4"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="消息" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/id_tab05"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#E0E0E0"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_tab05_img"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:clickable="false"
            android:scaleType="fitCenter"
            android:src="@drawable/tab05_normal" />

        <TextView
            android:id="@+id/bottom_tv5"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="我的" />
    </LinearLayout>

</LinearLayout>